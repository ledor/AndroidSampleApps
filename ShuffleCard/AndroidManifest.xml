<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ledor.shufflecard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ledor.shufflecard.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ledor.shufflecard.CubeLikeShuffleActivity"
            android:label="@string/title_activity_cube_like_shuffle" >
        </activity>
        <activity
            android:name="com.ledor.shufflecard.ShuffleAtCenterActivity"
            android:label="@string/title_activity_shuffle_at_center" >
        </activity>
        <activity
            android:name="com.ledor.shufflecard.RandomShuffleActivity"
            android:label="@string/title_activity_random_shuffle" >
        </activity>
        <activity
            android:name="com.ledor.shufflecard.BlinkingShuffleActivity"
            android:label="@string/title_activity_blinking_shuffle" >
        </activity>
    </application>

</manifest>